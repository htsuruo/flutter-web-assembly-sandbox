{
  "hosting": [
    {
      "target": "wasm",
      "public": "build/web_wasm",
      "headers": [
        {
          "source": "**/*",
          "headers": [
            {
              "key": "Cross-Origin-Embedder-Policy",
              "value": "require-corp"
            },
            {
              "key": "Cross-Origin-Opener-Policy",
              "value": "same-origin"
            }
          ]
        }
      ]
    },
    {
      "target": "js",
      "public": "build/web"
    },
    {
      "target": "html",
      "public": "build/web"
    }
  ],
  "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
}
